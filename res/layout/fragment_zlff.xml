                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/login_edit_normal"
                android:ems="10"
                android:hint=""
                android:inputType="textMultiLine" />

            <HorizontalScrollView
                android:layout_width="match_parent"
