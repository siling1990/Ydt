<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/head" />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt_grary_bg"
            android:clickable="true"
            android:onClick="uploadPatient"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cases_cloud" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="上传云端" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
           	android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt_grary_bg"
            android:clickable="true"
            android:visibility="gone"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cases_delete" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="批量删除" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/want_age" >

		 <ImageView
		     android:id="@+id/pPhoto"
		     android:layout_width="70dp"
		     android:layout_height="70dp"
		     android:layout_marginLeft="5dp"
		     android:layout_marginTop="5dp"
		     android:layout_marginBottom="5dp"
		     android:src="@drawable/actionbar_camera_icon" />

		 <TextView
		     android:id="@+id/pName"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentTop="true"
		     android:layout_toRightOf="@+id/pPhoto"
		     android:layout_marginTop="5dp"
		     android:layout_marginLeft="5dp"
		     android:text="@string/hello_world" />
		 

    </RelativeLayout>

</LinearLayout>